#include <string.h>
bool isPalindrome(char* s) {
    int i,len,rlen,m=0,n=0;
    len=strlen(s);
    char rev[len],revrev[len];
    for (i=0;s[i]!='\0';i++)
    {
        if (s[i]>=65&&s[i]<=90)
        {
            s[i]=s[i]+32;
            rev[m]=s[i];
            m=m+1;
        }
        else if ((s[i]>=97&&s[i]<=122)||(s[i]>=48&&s[i]<=57))
        {
            rev[m]=s[i];
            m=m+1;
        }
    }
    for (i=m-1;i>=0;i--)
    {
        revrev[i]=rev[(m-1)-i];
    }
    for (i=0;i<m;i++)
    {
        if (rev[i]!=revrev[i])
            n=n+1;
    }
    if (n==0)
        return true;
    else
        return false;   
}
